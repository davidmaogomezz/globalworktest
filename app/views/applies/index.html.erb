<% if can? :read, Apply %>
<div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">Nombre</th>
          <th scope="col">Apellido</th>
          <th scope="col">Documentos</th>
          <th scope="col">Cargo al que aspira</th>
          <th scope="col">Fecha de nacimiento</th>
          <th scope="col">Telefono</th>
        </tr>
      </thead>
      <tbody>
        <% @applies.each do |apply| %>
          <tr class="table-active">
            <th>
              <%= apply.id %>
            </th>
            <td>
              <%= apply.name_candidate %>
            </td>
            <td>
              <%= apply.last_name_candidate %>
            </td>           
            <td>
              <%= apply.vacancy.name %>
            </td>      
            <td>
              <%= apply.birthdate %>
            </td>                  
            <td>
              <%= apply.phone %>
            </td>             
            <td style="text-align: center;" class="button-edit-record">
                <%=link_to("applies/#{apply.id}/edit", :class => 'btn btn-primary')do%>
                  <i class="fas fa-search"></i>
                <%end%>
              </td>                        
            <td style="text-align: center;" class="button-edit-record">
              <%=link_to("applies/#{apply.id}/edit", :class => 'btn btn-primary')do%>
                <i class="fas fa-edit"></i>
              <%end%>
            </td>            
            <td style="text-align: center;" class="button-delete-record">
              <%=link_to("applies/#{apply.id}", :class => 'btn btn-primary', method: 'delete')do%>
                <i class="fas fa-trash"></i>
              <%end%>
            </td>            
          </tr>
        <% end %>      
      </tbody>
    </table>    
    <%=link_to("applies/new", :class => 'btn btn-primary')do%>
      <i class="fas fa-plus"></i>
    <%end%>          
  </div>   
<% else %>
 
<% end %>
