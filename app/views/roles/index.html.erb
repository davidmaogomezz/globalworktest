<% if can? :read, Role %>
<div class="container">
    <div class="row">
      <div class="col-sm-4 mx-auto">
        <h1>Roles</h1> 
      </div>
    </div>  
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">Nombre</th>
        </tr>
      </thead>
      <tbody>
        <% @roles.each do |role| %>
          <tr class="table-active">
            <th>
              <%= role.id %>
            </th>
            <td>
              <%= role.name %>
            </td>
            <td style="text-align: center;" class="button-edit-record">
              <%=link_to("roles/#{role.id}/edit", :class => 'btn btn-primary')do%>
                <i class="fas fa-edit"></i>
              <%end%>
            </td>            
            <td style="text-align: center;" class="button-delete-record">
              <%=link_to("roles/#{role.id}", :class => 'btn btn-primary', method: 'delete')do%>
                <i class="fas fa-trash"></i>
              <%end%>
            </td>            
          </tr>
        <% end %>      
      </tbody>
    </table>  
    <%=link_to("roles/new", :class => 'btn btn-primary')do%>
      <i class="fas fa-plus"></i>
    <%end%>      
  </div>    
<% end %>
